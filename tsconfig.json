{
  "compilerOptions": {
    "noImplicitAny": true,
    "noImplicitThis": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "inlineSources": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "es5",
    "lib": [
      "esnext",
      "dom"
    ],
    "baseUrl": ".",
    "paths": {
      "*": [
        "./types/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "types"
  ],
  "exclude": [
    "src/**/__tests__"
  ]
}
